global !p
def	gen_and_arr(num):
	result = " "
	try:
		for i in range(1, len(num)):
			result += " & "
		return result
	except:
		return ""
endglobal

snippet block "block in latex" b
\begin{${1:block}}
$2
\end{$1}
endsnippet

snippet init "begin document" b
\documentclass[12 pt, twoside] {article}
\usepackage[margin=1in]{geometry}

\begin{document}
$1
\end{document}
endsnippet

