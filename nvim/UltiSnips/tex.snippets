endsnippet

snippet norm "norm"
||\+$1\+||
endsnippet

snippet matrix "create a matrix"
\left[\begin{array}{${1:columns}}
	$2`!p snip.rv=gen_and_arr(t[1])`\\\\
\end{array}\right]
endsnippet

snippet booklet "creates a booklet" b
\documentclass[12 pt, twoside] {article}
\usepackage[letterpaper]{geometry}
\usepackage{pdfpages}
    \includepdfset{pages=-}

