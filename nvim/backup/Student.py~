from Weapon import Weapon
from Armor import Armor
import random

class baseChar:
	health = 10
	intelligence = 5
	constitution = 5
	strength = 5
	dexterity = 5
	lv = 1
	xp = 0
	wielded = Weapon()
	worn = Armor()
	name

	def __init__(myName):
		self.name = myName

	def atk(other):
		seed = int(random.random * 100)
		if seed < (dexterity + 80) and seed > (other.dexterity): # accuracy test
			other.health = other.health + other.worn.defense - ((80 + random.randrange(0,21)) / 100)(strength + wielded.atk)
